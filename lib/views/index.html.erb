<h1>Caisse enregistreuse</h1>

<h3>Total : <%= cart_total %></h3>
<form method="post" action="/add">
  <input type="text" id="fruit" name="fruit">
  <button type="submit" value="submit">Scanner un ou des articles</button>
</form>

<form method="post" action="/add_select">
  <select name="fruit_select" id="fruit_select">
    <option value="">--Choisissez un produit--</option>
    <% product_list.each do |k,v| %>
      <option value="<%= k %>"><%= k %></option>
    <% end %>
  </select>
  <button type="submit" value="submit">Scanner un article</button>
</form>

<form method="post" action="/empty_cart">
  <button type="submit" value="Submit">Vider le panier</button>
</form>

<h3>Liste de produits : </h3>
<% cart_list.each do |product| %>
  <p><%= product %></p>
<% end %>